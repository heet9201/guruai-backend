# Environment Configuration
FLASK_ENV=development
DEBUG=True
HOST=0.0.0.0
PORT=5000

# Security
SECRET_KEY=your-secret-key-here-change-in-production

# Google Cloud & Vertex AI Configuration
PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id  # Same as PROJECT_ID for compatibility
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
LOCATION=asia-south1  # India region for better performance

# Vertex AI Models
GEMINI_PRO_MODEL=gemini-1.5-pro
GEMINI_PRO_VISION_MODEL=gemini-1.5-pro-vision

# API Quotas (requests per hour)
TEXT_GENERATION_QUOTA=1000
VISION_ANALYSIS_QUOTA=500
SPEECH_TO_TEXT_QUOTA=2000

# Connection Pool Settings
MAX_POOL_SIZE=10
CONNECTION_TIMEOUT=30
READ_TIMEOUT=60

# Retry Settings
MAX_RETRIES=3
RETRY_DELAY=1.0
RETRY_BACKOFF=2.0

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=path/to/firebase-service-account.json

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-flutter-app.com

# Logging
LOG_LEVEL=INFO

# Storage
STORAGE_BUCKET=sahayak-audio-bucket

# ==========================================
# FILE MANAGEMENT CONFIGURATION
# ==========================================

# Google Cloud Storage for File Management
GOOGLE_CLOUD_STORAGE_BUCKET=your-file-storage-bucket-name
LOCAL_STORAGE_PATH=uploads
CDN_BASE_URL=https://your-cdn-domain.com
ENABLE_CDN=false

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,doc,docx,xls,xlsx,ppt,pptx,zip,mp3,mp4,wav

# Security Settings
ENABLE_VIRUS_SCANNING=false
VIRUSTOTAL_API_KEY=your-virustotal-api-key-here

# Service URLs (for production deployment)
# DATABASE_URL=postgresql://user:password@localhost/sahayak
# REDIS_URL=redis://redis-server:6379/0
